[user]
	name = Sam Hamilton
	email = shamilton@pragmatrading.com

[apply]
        whitespace = nowarn

[help]
        autocorrect = 1

[core]
        excludesfile = ~/.gitignore
        editor       = "mvim -f -c 'au VimLeave * opendiff -a Terminal'"
        autocrlf = input

[difftool "Kaleidoscope"]
        cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
        prompt = false

[diff]
	tool = Kaleidoscope
  renames = true

[color]
  diff = auto
  branch = auto
  status = auto
  ui = auto

[alias]
  st = status
  d = diff
  ci = commit -v
  cia = commit -v -a
  co = checkout
  cp = cherry-pick
  l = log
  ll = log -p
  lt = log trunk..
  llt = log -p trunk..
  lm = log master..
  llm = log -p master..
  b = branch
  co = checkout
  promote = !$ZSH/bin/git-promote
  wtf     = !$ZSH/bin/git-wtf
  rank-contributers = !$ZSH/bin/git-rank-contributers
  count   = !git shortlog -sn
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
  count = !git shortlog -sn
  stage = add

[credential]
        helper = osxkeychain

[hub]
        protocol = https

[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
